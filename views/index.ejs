<% include partials/header %>

<div class="landing-hero ui inverted vertical masthead center aligned segment">
  <div class="ui text container">
    <h1 class="ui inverted header">
      Welcome to ReadBooks!
    </h1>
    <h2>Report on books you have read and see what your friends are reading.</h2>
    <a href="/login" class="ui inverted button">Log in</a>
    <a href="/register" class="ui inverted button">Sign Up</a>
  </div>
</div>

<div id="main-title" class="ui raised very padded text container segment">
  <h1 class="ui header"> </h1>
  <p> Check out these latest reads!</p>
  <% books.forEach(function(book){ %>
    <div class="ui segment">
      <h3 class="ui header"><%=book.title%></h3>
      <div>author: <%=book.author%></div>
      <div class="meta">
        <span>posted by: <%=book.postedBy.email%></span>
      </div>
      <div class="ui clearing divider"></div>
      <% if(book.description){ %>
        <p><%=book.description.substring(0, 100);%></p>
        <%}%>
      <a href="/books/<%=book._id%>">read more</a>
    </div>
  <%})%>
</div>

<% include partials/footer %>
