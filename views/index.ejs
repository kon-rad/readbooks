<% include partials/header %>

<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
  <div class="ui container">
    <a href="/" class="active item">Home</a>
    <a href="/books/new" class="item">Add Book</a>
    <a class="item">Find Book</a>
    <a class="item">Discover</a>
    <div class="right menu">
      <div class="item">
        <a class="ui button">Log in</a>
      </div>
      <div class="item">
        <a class="ui primary button">Sign Up</a>
      </div>
    </div>
  </div>
</div>

<div id="main-title" class="ui raised very padded text container segment">
  <h1 class="ui header"> Welcome to ReadBooks!</h1>
  <p> Check out what we have!</p>
  <% books.forEach(function(book){ %>
    <div class="ui segment">
      <h3 class="ui header"><%=book.title%></h3>
      <div>author: <%=book.author%></div>
      <div class="ui clearing divider"></div>
      <% if(book.description){ %>
        <p><%=book.description.substring(0, 100);%></p>
        <%}%>
      <a href="/books/<%=book._id%>">read more</a>
    </div>
  <%})%>
</div>

<% include partials/footer %>