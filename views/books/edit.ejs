<% include ../partials/header %>

<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
  <div class="ui container">
    <a href="/" class="active item">Home</a>
    <a class="item">Add Book</a>
    <a class="item">Find Book</a>
    <a class="item">Discover</a>
    <div class="right menu">
      <div class="item">
        <a class="ui button">Log in</a>
      </div>
      <div class="item">
        <a class="ui primary button">Sign Up</a>
      </div>
    </div>
  </div>
</div>

<div id="main-title" class="ui raised very padded text container segment">
  <h1 class="ui header">Edit <%=book.title%></h1>
  <form class="ui form" action="/books/<%=book._id%>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="book[title]" value="<%=book.title%>">
    </div>
    <div class="field">
      <label>Description</label>
      <textarea row="2" name="book[description]"><%=book.description%></textarea>
    </div>
      <div class="field">
      <label>Author</label>
      <input type="text" name="book[author]" value="<%=book.author%>">
    </div>
    <button type="submit" class="ui tiny green basic button">Submit</button>
  </form>
</div>

